<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akhterrasool.collegelibrary">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:name=".service.SearchService" />
        <activity android:name=".activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.SearchActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".activity.ResultActivity" android:parentActivityName=".activity.HomeActivity"/>
        <activity android:name=".activity.SearchHistoryActivity"/>
        <activity android:name=".activity.IssuesAndFinesActivity"/>

        <activity
            android:name=".activity.notification.MainNotificationActivity"
            android:parentActivityName=".activity.HomeActivity"/>

        <activity
            android:name=".activity.notification.NotificationRegistrationActivity"
            android:parentActivityName=".activity.notification.MainNotificationActivity"/>

        <receiver android:name=".broadcast.DeviceBootedReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>