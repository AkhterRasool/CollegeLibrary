<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/notification_activity_title"
            android:textAlignment="center"
            android:layout_marginBottom="40sp"/>


        <Button
            android:layout_below="@id/notification_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Books"
            android:layout_centerHorizontal="true"
            android:id="@+id/register_books_notifications_button"
            android:layout_marginBottom="40sp"/>


        <Button
            android:id="@+id/view_registered_books_for_notifications_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Registered Books"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/register_books_notifications_button"
            android:layout_marginBottom="40sp"/>


        <Button
            android:id="@+id/notification_stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Service"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/view_registered_books_for_notifications_button"
            android:layout_marginBottom="40sp"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>